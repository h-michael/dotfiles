shell-integration = fish

theme = "TokyoNight Night"

# Font selection
font-family = Cica
font-family = PlemolJP Console NF Light

# Shell integration features
# - no-cursor: Disable cursor reporting to prevent [O[I sequences in Claude Code
# - sudo: Preserve Ghostty terminfo in sudo
# - title: Allow shell to set window title
shell-integration-features = no-cursor,sudo,title

cursor-style = block
clipboard-paste-bracketed-safe = true

# Scrollback (30MB)
scrollback-limit = 31457280

# Copy on select
copy-on-select = clipboard

# Enable clickable URLs
link-url = true

# Window padding
window-padding-x = 4
window-padding-y = 4

# Keybindings
keybind = super+0=unbind
keybind = super+shift+0=reset_font_size
keybind = super+up=jump_to_prompt:-1
keybind = super+down=jump_to_prompt:1
