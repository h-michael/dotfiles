shell-integration = fish

theme = tokyonight_night

font-family = Cica
font-family = PlemolJP Console
font-size = 14

# Shell integration features
# - no-cursor: Disable cursor reporting to prevent [O[I sequences in Claude Code
# - sudo: Preserve Ghostty terminfo in sudo
# - title: Allow shell to set window title
shell-integration-features = no-cursor,sudo,title

cursor-style = block
clipboard-paste-bracketed-safe = true

# Scrollback (30MB)
scrollback-limit = 31457280

# Copy on select
copy-on-select = clipboard

# Enable clickable URLs
link-url = true

# Window padding
window-padding-x = 4
window-padding-y = 4

# Minimum contrast ratio
minimum-contrast = 1.1

# Keybindings
keybind = super+0=unbind
keybind = super+shift+0=reset_font_size
keybind = super+up=jump_to_prompt:-1
keybind = super+down=jump_to_prompt:1

{{ if eq .chezmoi.os "linux" }}
initial-command = /usr/bin/fish --login --interactive
command = /usr/bin/fish --login --interactive
fullscreen = false
{{ else if eq .chezmoi.os "darwin" }}
initial-command = /opt/homebrew/bin/fish --login --interactive
command = /opt/homebrew/bin/fish --login --interactive
macos-option-as-alt = true
fullscreen = true
window-save-state = always
{{ end }}
